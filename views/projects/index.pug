extends ../layout

mixin sidebarItem(name,subItems,selectedItem,showingInactive)
  li
    strong=plural(capitalize(name))
    br
    ul(data-sidebar=name)
      if selectedItem
        li
          a(href='?'+(showingInactive?'&showall=true':'')+(searchTerm?'&search='+searchTerm:''))
            i.fa.fa-close
            | Clear Selection
        br
      br
      each item in subItems
        li(class=selectedItem===item?'selected':'')
          a(href="?"+name+'='+item+(showingInactive?'&showall=true':'')+(searchTerm?'&search='+searchTerm:''))=item
      br
      br

block content
  .row.breadcrumbs
    .col-sm-12
      a(href='/')= brigade.name
      | &nbsp;&nbsp;/&nbsp;
      a(href='/projects') Projects
  .row.page-header
    .col-sm-12
      h1.page-title Projects
        if user
          a.btn.btn-secondary.pull-right(href='/admin/projects/new') Create New Project
        else
          a.btn.btn-social.btn-github.pull-right(href='/auth/github')
            i.fa.fa-github
            | Log in to create new project
  .row
    hr
  .container
    .row
      .col-sm-3.sidebar
        span
          | Showing&nbsp;
          strong=projects.length
          | &nbsp;
          = (showingInactive?'':'active ')
          | projects
          br
          | out of&nbsp;
          strong=totalProjects
          | &nbsp;total
        br
        br
        a(href="/projects/?showall=true"+(selectedKeyword?'&keyword='+selectedKeyword:'')+(selectedNeed?'&need='+selectedNeed:'')+(searchTerm?'&search='+searchTerm:''), class=(showingInactive?'hidden':''))
          button.btn.btn-secondary Show inactive projects
        a(href="/projects/?"+(selectedKeyword?'&keyword='+selectedKeyword:'')+(selectedNeed?'&need='+selectedNeed:'')+(searchTerm?'&search='+searchTerm:''), class=(showingInactive?'':'hidden'))
          button.btn.btn-secondary Hide inactive projects
        br
        br
        hr
        br
        form.row.form-inline(action='/projects', method='GET')
          .form-group.row
            label.sr-only(for='search') Search Projects
            .input-group
              input.form-control(type='text', name='search', id='search', value=searchTerm, placeholder='Search Projects...')
              .input-group-btn
                button.btn.btn-primary
                  i.fa.fa-search
        if searchTerm
          a(href='?'+(showingInactive?'&showall=true':'')+(selectedKeyword?'&keyword='+selectedKeyword:'')+(selectedNeed?'&need='+selectedNeed:''))
            i.fa.fa-close
            | Clear Search
          br
        br
        ul(data-sidebar='true')
          +sidebarItem('keyword',keywords,selectedKeyword,showingInactive)
          +sidebarItem('need',needs,selectedNeed,showingInactive)
      .col-sm-9
        .row.grid.project-container(data-masonry='{ "itemSelector": ".grid-item", "columnWidth": 358 }')
          each project in projects
            if project.published
              .col-sm-6.card.project-list-card.grid-item
                if project.thumbnailUrl.length
                  a(href='/projects/'+project.id)
                    span.thumbnail(style='background-image:url('+project.thumbnailUrl+');').img-fluid.card-img-top
                .card-block
                  h3.card-title
                    a(href='/projects/'+project.id)
                      =project.name
                      br
                      span.badge.activity(class=(project.active?'active':'inactive'))=(project.active?'Active':'Inactive')
                  p.card-text= project.description
                  p.card-keywords
                    span Keywords
                    each keyword in project.keywords
                      a.badge(href='?keyword='+keyword)= keyword
                  p.card-needs
                    span Needs
                    each need in project.needs
                      a.badge(href='?need='+need)= need

block script
  script(src='https://unpkg.com/masonry-layout@4/dist/masonry.pkgd.min.js')
